<%= form_for(@product, :html => {:class => "form"}) do |f| %>
  <% if @product.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@product.errors.count, "error") %> prohibited this product from being saved:</h2>

      <ul>
      <% @product.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <div class="field">
    <%= f.label :name, "Nome" %><br>
    <%= f.text_field :name, :class => "form-control" %>
  </div>
  <div class="field">
    <%= f.label :category, "Categoria"  %><br>
    <div class="input-group">
        <%= f.collection_select :category_id, @categories, :id, :name, {}, :class => "form-control" %>
        <span class="input-group-btn">
            <%= link_to new_category_path, class: "btn btn-default" do %>
              <span class="glyphicon glyphicon-plus"></span> Nova
            <% end %>
        </span>
    </div>
  </div>

  <div class="actions">
    <%= f.submit "Salvar", :class => "btn btn-default " %>
  </div>
<% end %>
